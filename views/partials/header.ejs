<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Expense Tracker' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  <header class="bg-gradient-to-r from-blue-600 to-purple-700 shadow-lg sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex-shrink-0">
          <a href="/" class="flex items-center space-x-2 text-white hover:no-underline">
            <i class="fas fa-chart-pie text-xl"></i>
            <span class="text-xl font-bold">Expense Tracker</span>
          </a>
        </div>

        <!-- Navigation -->
        <div class="flex items-center space-x-4">
          <% if (user) { %>
            <div class="flex items-center space-x-4">
              <div class="flex items-center space-x-2 text-white">
                <i class="fas fa-user-circle"></i>
                <span class="hidden sm:inline">Welcome, <%= user.name %></span>
              </div>
              <form method="post" action="/logout" class="m-0">
                <button type="submit" class="bg-white/20 hover:bg-white/30 text-white px-4 py-2 rounded-full border border-white/30 transition-all duration-300 hover:scale-105 flex items-center space-x-2">
                  <i class="fas fa-sign-out-alt"></i>
                  <span class="hidden sm:inline">Logout</span>
                </button>
              </form>
            </div>
          <% } else { %>
            <nav class="flex items-center space-x-3">
              <a href="/login" class="text-white hover:bg-white/10 px-4 py-2 rounded-full border border-white/30 transition-all duration-300 flex items-center space-x-2">
                <i class="fas fa-sign-in-alt"></i>
                <span class="hidden sm:inline">Login</span>
              </a>
              <a href="/register" class="bg-white text-blue-600 hover:bg-gray-100 px-4 py-2 rounded-full border border-white transition-all duration-300 hover:scale-105 flex items-center space-x-2">
                <i class="fas fa-user-plus"></i>
                <span class="hidden sm:inline">Register</span>
              </a>
            </nav>
          <% } %>
        </div>
      </div>
    </div>
  </header>

  <main class="flex-1">
    <% if (error) { %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg flex items-center space-x-2 animate-slide-in">
          <i class="fas fa-exclamation-circle"></i>
          <span><%= error %></span>
        </div>
      </div>
    <% } %>
    <% if (success) { %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg flex items-center space-x-2 animate-slide-in">
          <i class="fas fa-check-circle"></i>
          <span><%= success %></span>
        </div>
      </div>
    <% } %>