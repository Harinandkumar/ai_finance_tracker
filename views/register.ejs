<%- include('partials/header') %>

<div class="min-h-screen bg-gradient-to-br from-green-50 to-blue-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <!-- Register Card -->
    <div class="bg-white rounded-3xl shadow-2xl border border-gray-200 overflow-hidden">
      <!-- Header Section -->
      <div class="bg-gradient-to-r from-green-600 to-blue-700 px-8 py-6 text-center">
        <div class="flex items-center justify-center space-x-3 mb-2">
          <i class="fas fa-user-plus text-white text-2xl"></i>
          <h2 class="text-2xl font-bold text-white">Create Account</h2>
        </div>
        <p class="text-green-100">Join Expense Tracker and manage your finances smarter</p>
      </div>

      <!-- Form Section -->
      <div class="px-8 py-8">
        <form action="/register" method="post" class="space-y-6">
          <!-- Name Field -->
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2 flex items-center space-x-2">
              <i class="fas fa-user text-green-500"></i>
              <span>Full Name</span>
            </label>
            <div class="relative">
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-4 pl-12 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-300 text-lg placeholder-gray-400"
                placeholder="Enter your full name"
              >
              <i class="fas fa-id-card absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>

          <!-- Email Field -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2 flex items-center space-x-2">
              <i class="fas fa-envelope text-green-500"></i>
              <span>Email Address</span>
            </label>
            <div class="relative">
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-4 pl-12 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-300 text-lg placeholder-gray-400"
                placeholder="Enter your email"
              >
              <i class="fas fa-at absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>

          <!-- Password Field -->
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2 flex items-center space-x-2">
              <i class="fas fa-key text-green-500"></i>
              <span>Password</span>
              <span class="text-xs text-gray-500">(min. 6 characters)</span>
            </label>
            <div class="relative">
              <input 
                type="password" 
                id="password" 
                name="password" 
                required
                minlength="6"
                class="w-full px-4 py-4 pl-12 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-300 text-lg placeholder-gray-400"
                placeholder="Create a strong password"
              >
              <i class="fas fa-lock absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
            <div class="mt-2 grid grid-cols-3 gap-2 text-xs">
              <div class="password-strength-item" data-strength="length">6+ chars</div>
              <div class="password-strength-item" data-strength="uppercase">A-Z</div>
              <div class="password-strength-item" data-strength="number">0-9</div>
            </div>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full bg-gradient-to-r from-green-600 to-blue-700 text-white py-4 px-6 rounded-xl font-semibold text-lg hover:shadow-2xl transform hover:scale-105 transition-all duration-300 flex items-center justify-center space-x-3"
          >
            <i class="fas fa-user-plus"></i>
            <span>Create Account</span>
          </button>
        </form>

        <!-- Divider -->
        <div class="relative my-8">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-white text-gray-500">Already have an account?</span>
          </div>
        </div>

        <!-- Login Link -->
        <div class="text-center">
          <p class="text-gray-600">
            Already registered? 
            <a href="/login" class="text-green-600 hover:text-green-700 font-semibold transition-colors duration-300 flex items-center justify-center space-x-2 mt-2">
              <i class="fas fa-sign-in-alt"></i>
              <span>Sign In Now</span>
            </a>
          </p>
        </div>
      </div>

      <!-- Benefits Section -->
      <div class="bg-gray-50 px-8 py-6 border-t border-gray-200">
        <div class="text-center">
          <h4 class="text-sm font-semibold text-gray-600 mb-4">Start your financial journey with benefits:</h4>
          <div class="grid grid-cols-2 gap-4 text-xs text-gray-500">
            <div class="flex items-center space-x-2">
              <i class="fas fa-receipt text-green-500"></i>
              <span>Receipt Scanning</span>
            </div>
            <div class="flex items-center space-x-2">
              <i class="fas fa-chart-pie text-blue-500"></i>
              <span>Expense Analytics</span>
            </div>
            <div class="flex items-center space-x-2">
              <i class="fas fa-mobile-alt text-purple-500"></i>
              <span>Mobile Friendly</span>
            </div>
            <div class="flex items-center space-x-2">
              <i class="fas fa-shield-alt text-red-500"></i>
              <span>Data Security</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Flash Messages (if any) -->
    <% if (error) { %>
      <div class="mt-6 bg-red-50 border border-red-200 rounded-xl p-4 flex items-center space-x-3 animate-slide-in">
        <i class="fas fa-exclamation-circle text-red-500 text-lg"></i>
        <span class="text-red-700 font-medium"><%= error %></span>
      </div>
    <% } %>
    <% if (success) { %>
      <div class="mt-6 bg-green-50 border border-green-200 rounded-xl p-4 flex items-center space-x-3 animate-slide-in">
        <i class="fas fa-check-circle text-green-500 text-lg"></i>
        <span class="text-green-700 font-medium"><%= success %></span>
      </div>
    <% } %>
  </div>
</div>

<style>
  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-slide-in {
    animation: slide-in 0.5s ease-out;
  }

  .password-strength-item {
    @apply bg-gray-100 text-gray-500 px-2 py-1 rounded text-center transition-all duration-300;
  }

  .password-strength-item.active {
    @apply bg-green-100 text-green-700 font-medium;
  }

  /* Smooth focus transitions */
  input:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1);
  }

  /* Hover effects */
  button:hover {
    transform: translateY(-2px);
  }
</style>

<script>
  // Simple password strength indicator
  document.addEventListener('DOMContentLoaded', function() {
    const passwordInput = document.getElementById('password');
    const strengthItems = document.querySelectorAll('.password-strength-item');
    
    if (passwordInput) {
      passwordInput.addEventListener('input', function() {
        const password = this.value;
        
        // Check length
        strengthItems[0].classList.toggle('active', password.length >= 6);
        
        // Check uppercase
        strengthItems[1].classList.toggle('active', /[A-Z]/.test(password));
        
        // Check numbers
        strengthItems[2].classList.toggle('active', /[0-9]/.test(password));
      });
    }
  });
</script>

<%- include('partials/footer') %>