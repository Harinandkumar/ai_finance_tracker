<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Finance Tracker</title>
  <link rel="stylesheet" href="/public/style.css" />
</head>
<body>
  <div class="container">
    <h1>Finance Tracker</h1>

    <section class="uploader">
      <h2>Upload Receipt (image or PDF)</h2>
      <% if (message) { %>
        <div class="msg"><%= message %></div>
      <% } %>

      <form action="/upload" method="post" enctype="multipart/form-data">
        <input type="file" name="receipt" accept="image/*,application/pdf" required />
        <button type="submit">Upload & Process</button>
      </form>

      <h3>Or add manually</h3>
      <form action="/add" method="post" class="manual">
        <input type="text" name="desc" placeholder="Description" />
        <input type="number" step="0.01" name="amount" placeholder="Amount" required />
        <input type="text" name="category" placeholder="Category" />
        <input type="date" name="date" />
        <button type="submit">Add</button>
      </form>
    </section>

    <hr/>

    <section class="list">
      <h2>Recent Expenses</h2>
      <table>
        <thead>
          <tr><th>Date</th><th>Vendor</th><th>Description</th><th>Amount</th><th>Category</th></tr>
        </thead>
        <tbody>
          <% if (expenses && expenses.length) { %>
            <% expenses.forEach(e => { %>
              <tr>
                <td><%= new Date(e.date).toLocaleDateString() %></td>
                <td><%= e.vendor || '—' %></td>
                <td><%= e.description %></td>
                <td>₹<%= e.amount.toFixed(2) %></td>
                <td><%= e.category %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="5">No expenses yet</td></tr>
          <% } %>
        </tbody>
      </table>
    </section>
  </div>
</body>
</html>
