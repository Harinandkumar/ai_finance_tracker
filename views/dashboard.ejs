<%- include('partials/header') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold text-gray-900 flex items-center justify-center space-x-3">
      <i class="fas fa-tachometer-alt text-blue-600"></i>
      <span>Dashboard</span>
    </h2>
    <p class="text-gray-600 mt-2 text-lg">Manage your expenses efficiently</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Add Expense Card -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
      <div class="bg-gradient-to-r from-blue-600 to-purple-700 px-6 py-4">
        <h3 class="text-white text-lg font-semibold flex items-center space-x-2">
          <i class="fas fa-plus-circle"></i>
          <span>Add Expense Manually</span>
        </h3>
      </div>
      <div class="p-6">
        <form action="/expenses/add" method="post" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="description" class="block text-sm font-medium text-gray-700 mb-2 flex items-center space-x-2">
                <i class="fas fa-file-alt text-gray-400"></i>
                <span>Description</span>
              </label>
              <input type="text" id="description" name="description" 
                     class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300"
                     placeholder="Enter expense description">
            </div>

            <div>
              <label for="amount" class="block text-sm font-medium text-gray-700 mb-2 flex items-center space-x-2">
                <i class="fas fa-money-bill-wave text-gray-400"></i>
                <span>Amount *</span>
              </label>
              <input type="number" id="amount" name="amount" step="0.01" required
                     class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300"
                     placeholder="0.00">
            </div>

            <div>
              <label for="category" class="block text-sm font-medium text-gray-700 mb-2 flex items-center space-x-2">
                <i class="fas fa-tags text-gray-400"></i>
                <span>Category</span>
              </label>
              <select id="category" name="category" 
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300">
                <option value="Food">üçï Food</option>
                <option value="Travel">‚úàÔ∏è Travel</option>
                <option value="Grocery">üõí Grocery</option>
                <option value="Shopping">üõçÔ∏è Shopping</option>
                <option value="Fuel">‚õΩ Fuel</option>
                <option value="Bills">üìÑ Bills</option>
                <option value="Entertainment">üé¨ Entertainment</option>
                <option value="Uncategorized" selected>üì¶ Uncategorized</option>
              </select>
            </div>

            <div>
              <label for="date" class="block text-sm font-medium text-gray-700 mb-2 flex items-center space-x-2">
                <i class="fas fa-calendar text-gray-400"></i>
                <span>Date</span>
              </label>
              <input type="date" id="date" name="date"
                     class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300">
            </div>
          </div>

          <div>
            <label for="vendor" class="block text-sm font-medium text-gray-700 mb-2 flex items-center space-x-2">
              <i class="fas fa-store text-gray-400"></i>
              <span>Vendor</span>
            </label>
            <input type="text" id="vendor" name="vendor"
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300"
                   placeholder="Enter vendor name">
          </div>

          <button type="submit" 
                  class="w-full bg-gradient-to-r from-blue-600 to-purple-700 text-white py-3 px-6 rounded-lg font-semibold hover:shadow-lg transform hover:scale-105 transition-all duration-300 flex items-center justify-center space-x-2">
            <i class="fas fa-plus"></i>
            <span>Add Expense</span>
          </button>
        </form>
      </div>
    </div>

    <!-- Upload Receipt Card -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
      <div class="bg-gradient-to-r from-blue-600 to-purple-700 px-6 py-4">
        <h3 class="text-white text-lg font-semibold flex items-center justify-between">
          <span class="flex items-center space-x-2">
            <i class="fas fa-receipt"></i>
            <span>Upload Receipt</span>
          </span>
          <span class="bg-white/20 px-3 py-1 rounded-full text-sm">Auto-detect</span>
        </h3>
      </div>
      <div class="p-6">
        <form action="/expenses/upload" method="post" enctype="multipart/form-data" class="space-y-6">
          <div class="border-2 border-dashed border-gray-300 rounded-2xl p-8 text-center transition-all duration-300 hover:border-blue-400 hover:bg-blue-50 relative">
            <i class="fas fa-cloud-upload-alt text-4xl text-blue-500 mb-4"></i>
            <h4 class="text-lg font-semibold text-gray-700 mb-2">Drop your receipt here or click to browse</h4>
            <p class="text-gray-500 text-sm">Supported formats: JPEG, JPG, PNG, PDF</p>
            <input type="file" name="receipt" accept=".jpeg,.jpg,.png,.pdf" required 
                   class="absolute inset-0 w-full h-full opacity-0 cursor-pointer">
          </div>

          <div class="text-center">
            <small class="text-gray-500 flex items-center justify-center space-x-2">
              <i class="fas fa-info-circle"></i>
              <span>Maximum file size: 12MB</span>
            </small>
          </div>

          <button type="submit" 
                  class="w-full bg-gray-100 text-gray-700 py-3 px-6 rounded-lg font-semibold hover:bg-gray-200 border border-gray-300 transform hover:scale-105 transition-all duration-300 flex items-center justify-center space-x-2">
            <i class="fas fa-upload"></i>
            <span>Upload & Process</span>
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Recent Expenses Card -->
  <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
    <div class="bg-gradient-to-r from-blue-600 to-purple-700 px-6 py-4">
      <h3 class="text-white text-lg font-semibold flex items-center space-x-2">
        <i class="fas fa-history"></i>
        <span>Recent Expenses</span>
      </h3>
    </div>
    <div class="p-6">
      <% if (!expenses || expenses.length === 0) { %>
        <div class="text-center py-12">
          <i class="fas fa-receipt text-6xl text-gray-300 mb-4"></i>
          <h4 class="text-xl font-semibold text-gray-500 mb-2">No expenses yet</h4>
          <p class="text-gray-400">Start by adding an expense manually or uploading a receipt</p>
        </div>
      <% } else { %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">#</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vendor</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% expenses.forEach(function(exp, idx) { %>
                <tr class="hover:bg-gray-50 transition-colors duration-200">
                  <td class="px-4 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= idx+1 %></td>
                  <td class="px-4 py-4 text-sm text-gray-900"><%= exp.description %></td>
                  <td class="px-4 py-4 text-sm text-gray-500"><%= exp.vendor || '-' %></td>
                  <td class="px-4 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= exp.category %>
                    </span>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                    ‚Çπ<%= (exp.amount || 0).toFixed(2) %>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= new Date(exp.date).toLocaleDateString() %>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap text-sm">
                    <form action="/expenses/delete/<%= exp._id %>" method="post" 
                          onsubmit="return confirm('Are you sure you want to delete this expense?')">
                      <button type="submit" 
                              class="bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded-lg text-xs font-semibold transition-all duration-300 hover:scale-105 flex items-center space-x-1">
                        <i class="fas fa-trash"></i>
                        <span>Delete</span>
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('partials/footer') %>