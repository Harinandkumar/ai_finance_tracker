<%- include('partials/header') %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-purple-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <!-- Login Card -->
    <div class="bg-white rounded-3xl shadow-2xl border border-gray-200 overflow-hidden">
      <!-- Header Section -->
      <div class="bg-gradient-to-r from-blue-600 to-purple-700 px-8 py-6 text-center">
        <div class="flex items-center justify-center space-x-3 mb-2">
          <i class="fas fa-lock text-white text-2xl"></i>
          <h2 class="text-2xl font-bold text-white">Welcome Back</h2>
        </div>
        <p class="text-blue-100">Sign in to your Expense Tracker account</p>
      </div>

      <!-- Form Section -->
      <div class="px-8 py-8">
        <form action="/login" method="post" class="space-y-6">
          <!-- Email Field -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2 flex items-center space-x-2">
              <i class="fas fa-envelope text-blue-500"></i>
              <span>Email Address</span>
            </label>
            <div class="relative">
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-4 pl-12 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 text-lg placeholder-gray-400"
                placeholder="Enter your email"
              >
              <i class="fas fa-user absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>

          <!-- Password Field -->
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2 flex items-center space-x-2">
              <i class="fas fa-key text-blue-500"></i>
              <span>Password</span>
            </label>
            <div class="relative">
              <input 
                type="password" 
                id="password" 
                name="password" 
                required
                class="w-full px-4 py-4 pl-12 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 text-lg placeholder-gray-400"
                placeholder="Enter your password"
              >
              <i class="fas fa-lock absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full bg-gradient-to-r from-blue-600 to-purple-700 text-white py-4 px-6 rounded-xl font-semibold text-lg hover:shadow-2xl transform hover:scale-105 transition-all duration-300 flex items-center justify-center space-x-3"
          >
            <i class="fas fa-sign-in-alt"></i>
            <span>Sign In</span>
          </button>
        </form>

        <!-- Divider -->
        <div class="relative my-8">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-white text-gray-500">New to Expense Tracker?</span>
          </div>
        </div>

        <!-- Register Link -->
        <div class="text-center">
          <p class="text-gray-600">
            Don't have an account? 
            <a href="/register" class="text-blue-600 hover:text-blue-700 font-semibold transition-colors duration-300 flex items-center justify-center space-x-2 mt-2">
              <i class="fas fa-user-plus"></i>
              <span>Create Account</span>
            </a>
          </p>
        </div>
      </div>

      <!-- Additional Features -->
      <div class="bg-gray-50 px-8 py-6 border-t border-gray-200">
        <div class="text-center">
          <h4 class="text-sm font-semibold text-gray-600 mb-3">Why choose Expense Tracker?</h4>
          <div class="grid grid-cols-3 gap-4 text-xs text-gray-500">
            <div class="flex flex-col items-center space-y-1">
              <i class="fas fa-receipt text-blue-500"></i>
              <span>Smart OCR</span>
            </div>
            <div class="flex flex-col items-center space-y-1">
              <i class="fas fa-chart-bar text-green-500"></i>
              <span>Analytics</span>
            </div>
            <div class="flex flex-col items-center space-y-1">
              <i class="fas fa-shield-alt text-purple-500"></i>
              <span>Secure</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Flash Messages (if any) -->
    <% if (error) { %>
      <div class="mt-6 bg-red-50 border border-red-200 rounded-xl p-4 flex items-center space-x-3 animate-slide-in">
        <i class="fas fa-exclamation-circle text-red-500 text-lg"></i>
        <span class="text-red-700 font-medium"><%= error %></span>
      </div>
    <% } %>
    <% if (success) { %>
      <div class="mt-6 bg-green-50 border border-green-200 rounded-xl p-4 flex items-center space-x-3 animate-slide-in">
        <i class="fas fa-check-circle text-green-500 text-lg"></i>
        <span class="text-green-700 font-medium"><%= success %></span>
      </div>
    <% } %>
  </div>
</div>

<style>
  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-slide-in {
    animation: slide-in 0.5s ease-out;
  }

  /* Smooth focus transitions */
  input:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }
</style>

<%- include('partials/footer') %>